<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="10dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#25010101"
                android:paddingRight="5dp"
                android:paddingLeft="5dp">

            <TextView android:text="12:30 pm"
                      android:id="@+id/tt_start_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="right"
                      android:gravity="center"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:textColor="#3d3d3d"/>

            <TextView android:text="to"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="center_horizontal"
                      android:gravity="center"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:textColor="#3d3d3d"/>

            <TextView android:text="1:45 pm"
                      android:id="@+id/tt_end_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_gravity="right"
                      android:gravity="center"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:textColor="#3d3d3d"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingLeft="10dp">

            <TextView android:text="Lecture"
                      android:id="@+id/tt_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:gravity="center_vertical"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:textColor="#3d3d3d"
                      android:textSize="28dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView android:text="(2hrs)"
                          android:id="@+id/tt_dur"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:textColor="#3d3d3d"/>

                <TextView android:text="some tecaher"
                          android:id="@+id/tt_teacher"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceSmall"
                          android:textColor="#3d3d3d"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
